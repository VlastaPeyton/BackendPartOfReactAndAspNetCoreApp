{
    "ConnectionStrings": {
        "Database": "Server=DESKTOP-8N7C15F\\VLASTASQL;Database=ReactTSDotNetAppDB;Trusted_Connection=True;Encrypt=False;TrustServerCertificate=True",
        // Nema User Id i Password jer koristim Windows Authentication u SQL Management Studio kad sam pravio bazu, jer baza nije Docker Container SQL Server
        // Ako zelim Api project bude unutar docker, ovaj conn string mora se menjati !
        "Redis": "localhost:6378" // App in localhost rezimu na port 6378 (6379 je zauzet za EshopMicroservices) da prica sa Redis koji je u Docker a ciji default port je 6379
    },
    "JWT": { // Access Token 
        "Issuer": "https://localhost:7045", // Iz launchSettings.json http port za Issuer i Audience. Bolje uzmi https port, jer pokrecem https uvek. 
        "Audience": "https://localhost:7045",
        "SigningKey": "gh9ghg9gh8fdd05944kchdhe332s2272p3o3jdj55bfhr8c9xjs303njxj22" // Mora biti dugacak dovoljno jer u TokenService SHA256 koristim 
    },
    "FMPApiKey": "jFxvEbSmaafEAnX1FZnhRe0TUSVpRzzz", // Ovo sam dobio na FinancialModelingPrep. Isti ovaj api key koristim i u FE api.tsx
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "MessageBroker": {
        "Host": "amqp://localhost:5673", // App in localhost rezimu na port 5673 (5672 je zauzet za EshopMicroservices) komunicira sa RabbitMQ docker container ciji je default port 5672, jer je zauzet za RabbitMQ Docker container.Api pokrenem iz VS, i zato ovakav Host a ne amqp://messagebroker2:5672
        "UserName": "guest",
        "Password": "guest"
    },
    "Serilog": {
        "Using": [ "Serilog.Sinks.MSSqlServer", "Serilog.Sinks.Console" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": { // Da ne loguje one nepotrebne Information stvari iz .NET
                "Microsoft": "Warning",
                "Microsoft.Hosting.Lifetime": "Information",
                "Microsoft.EntityFrameworkCore": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
                }
            },
            {
                "Name": "MSSqlServer",
                "Args": {
                    "connectionString": "Server=DESKTOP-8N7C15F\\VLASTASQL;Database=ReactTSDotNetAppDB;Trusted_Connection=True;Encrypt=False;TrustServerCertificate=True",
                    "restrictedToMinimumLevel": "Warning", // Da u bazu ne ide Info, vec Warning+Exception, dok u Console ide sve.
                    "sinkOptionsSection": {
                        "tableName": "SerilogTabela",
                        "schemaName": "dbo",
                        "autoCreateSqlTable": true,
                        "batchPostingLimit": 50,
                        "batchPeriod": "0.00:00:05"
                    },
                    "columnOptionsSection": {
                        "clusteredColumnstoreIndex": false, // Jer app nije ogromna, pa neam milione logova i ne radim upite nad njima
                        "primaryKeyColumnName": "Id",
                        "removeStandardColumns": [ "MessageTemplate", "Properties" ], // Ove default kolone su visak
                        "addStandardColumns": [ "LogEvent" ], // Jer sam iskljucio Properties koja je XML, a dodao LogEvent koja je JSON
                        "additionalColumns": [
                            {
                                "ColumnName": "UserName", // Ako zelim da logujem trenutnog usera, napravim UserName kolonu da se upise i ovde + u LogEvent JSON (default)
                                "DataType": "nvarchar",
                                "DataLength": 100,
                                "AllowNull": true
                            }
                        ]
                    }
                }
            }
        ],
        "Enrich": [ "FromLogContext" ]
    },
    // Umesto vode, GoogleAuth credencijale sam stavuo u .env zbog Github
    // Umesto ovde, SMTP credencijale za email sam stavio u .env jer ne zelim na Github da mi se vidi password 
    "AllowedHosts": "*"
}
